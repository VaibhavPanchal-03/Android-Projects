<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerRequestForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/crfName"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="31dp" />

        <EditText
            android:id="@+id/crfContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Contact"
            android:layout_weight="1"
            android:inputType="phone" />

    </LinearLayout>



    <TextView
        android:id="@+id/crfSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="15sp"
        android:textSize="20dp"
        android:hint="Meeting point"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/crfDest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="15dp"
        android:text="Datta meghe college of engineering"
        android:inputType="textPersonName" />



    <EditText
        android:id="@+id/crfSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Seat count"
        android:layout_margin="15dp"
        android:inputType="number" />

    <Button
        android:id="@+id/crfSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="SAVE" />



</LinearLayout>