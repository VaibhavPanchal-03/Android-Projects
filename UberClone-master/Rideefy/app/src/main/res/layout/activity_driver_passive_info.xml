<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverPassiveInfo">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/driName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="31dp" />

        <EditText
            android:id="@+id/driContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contact"
            android:inputType="phone" />

    </LinearLayout>



        <TextView
            android:id="@+id/driSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:hint="Source"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/driDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Datta meghe college of engineering"
            android:inputType="textPersonName" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Select a Date..."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/driTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Timings"
            android:inputType="time"
            android:textSize="20sp"/>


    </LinearLayout>

    <EditText
        android:id="@+id/driSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Seat count"
        android:inputType="number" />

    <Button
        android:id="@+id/driSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE" />

    <Button
        android:id="@+id/driRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHOW ROUTE" />
</LinearLayout>